<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:id="@+id/bg_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/bg_foto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_photo"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile" />
            <View
                android:id="@+id/back_photo_view"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:background="@drawable/custom_bgprofile"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSharePoint"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_baseline_share_24"
                android:layout_marginLeft="335dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/SettingButton"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/settings"
                android:layout_marginLeft="370dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/HopePageBtn"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="370dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_home" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:minHeight="?attr/actionBarSize"
                app:titleTextColor="?attr/colorPrimary">

                <TextView
                    android:id="@+id/tvUserName1"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="asafHaShor"
                    android:textColor="@android:color/white" />
            </androidx.appcompat.widget.Toolbar>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/foto_profile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="90dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_profile" />

            <TextView
                android:id="@+id/tvUserName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asafHaShor"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="220dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_change"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/custom_button3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="290dp"
                android:text="change data"
                android:textColor="@android:color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_StartWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"

                android:layout_toStartOf="@+id/tv_DayOfStart"
                android:layout_toLeftOf="@+id/tv_DayOfStart"
                android:drawableStart="@drawable/ic_time"
                android:drawableLeft="@drawable/ic_time"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:paddingRight="30dp"
                android:text="16d"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_DayOfStart"
                android:drawableStart="@drawable/ic_date"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="3-8-21"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/ic_date"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/tv_point"
                android:drawableStart="@drawable/ic_point"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="56"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:layout_toEndOf="@+id/tv_DayOfStart"
                android:drawableLeft="@drawable/ic_point"
                android:gravity="center_horizontal"
                android:layout_toRightOf="@+id/tv_DayOfStart" />



            <TextView
                android:id="@+id/tv_startDate"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="start"
                android:paddingTop="45dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="20dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:gravity="center_horizontal" />

            <TextView

                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="start weight"
                android:layout_toStartOf="@+id/tv_startDate"
                android:paddingTop="45dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="20dp"
                android:textAlignment="center"
                android:layout_toLeftOf="@+id/tv_startDate"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_toEndOf="@+id/tv_startDate"
                android:layout_toRightOf="@+id/tv_startDate"
                android:gravity="center_horizontal"
                android:paddingLeft="30dp"
                android:paddingTop="45dp"
                android:paddingRight="30dp"
                android:paddingBottom="20dp"
                android:text="points"
                android:textAlignment="center" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DDDDDD" >

            <TextView
                android:id="@+id/tv_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="information"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"/>

        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:orientation="vertical"
                android:background="#DDDDDD">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custmbg1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="20dp"
                            android:text="age:"
                            android:textColor="@android:color/white" />
                        <TextView
                            android:id="@+id/tv_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:textColor="@android:color/white"
                            android:text="16y"

                            />
                    </LinearLayout>

                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custombg2">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textColor="@android:color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="height:"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="20dp"
                            android:drawablePadding="10dp"
                            />
                        <TextView
                            android:id="@+id/tv_height"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:textColor="@android:color/white"
                            android:text="178cm"

                            />
                    </LinearLayout>

                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custombg3">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textColor="@android:color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="weight:"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="20dp"
                            android:drawablePadding="10dp"
                            />
                        <TextView
                            android:id="@+id/tv_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:textColor="@android:color/white"
                            android:text="67kg"

                            />
                    </LinearLayout>

                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custmbg1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textColor="@android:color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="gander:"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="20dp"
                            android:drawablePadding="10dp"
                            />
                        <TextView
                            android:id="@+id/tv_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:textColor="@android:color/white"
                            android:text="male"

                            />
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custombg3">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textColor="@android:color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="email:"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="20dp"
                            android:drawablePadding="10dp"
                            />
                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:textColor="@android:color/white"
                            android:text="asafOz@gmail.com"

                            />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</ScrollView>